{{!< default}}

<main class="site-main">
    {{#tag}}
    <section class="tag">
        <div class="gh-canvas">
            <h1 class="tag-name">{{name}}</h1>
            
            {{#if description}}
                <div class="tag-description">{{description}}</div>
            {{/if}}
            
            {{#if feature_image}}
                <div class="tag-media u-placeholder horizontal kg-width-wide">
                    <img class="u-object-fit" srcset="{{> srcset}}" src="{{img_url feature_image size="l"}}" alt="{{name}}">
                </div>
            {{/if}}
        </div>
    </section>
    {{/tag}}

    {{! --- Posts anzeigen --- }}
    {{#if posts}}
        {{#foreach posts}}
            {{#if @first}}
                {{! --- Vollständiger Artikel (erster Post des Tags) --- }}
                <article class="gh-article-full gh-canvas">
                    <header class="gh-article-header">
                        <h2 class="gh-article-title">{{title}}</h2>
                        {{#if custom_excerpt}}<p class="gh-article-excerpt">{{custom_excerpt}}</p>{{/if}}
                        <div class="gh-article-meta">
                            Von {{primary_author.name}} · <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                            {{#if @site.comments_enabled}}
                                {{#if comments_count}} · {{comments_count}} Kommentar(e){{/if}}
                            {{/if}}
                        </div>
                    </header>
                    
                    {{#if feature_image}}
                    <figure class="gh-article-image">
                        <img src="{{feature_image}}" alt="{{title}}" />
                    </figure>
                    {{/if}}
                    
                    <div class="gh-content gh-canvas">
                        {{content}}
                    </div>
                    
                    {{! --- Permalink hinzufügen (rechtsbündig) --- }}
                    <div class="gh-permalink-container">
                        <a href="{{url}}" class="gh-permalink-link">Permalink zum Artikel</a>
                    </div>
                </article>
                
                {{#has next}}
                    <div class="gh-canvas">
                        <hr>
                        <h2 class="gh-list-heading">Weitere {{../tag.name}}-Artikel</h2>
                    </div>
                {{/has}}
            {{/if}}
        {{/foreach}}

        {{! --- Artikel-Liste für restliche Posts --- }}
        <div class="post-feed gh-feed gh-canvas">
            {{#foreach posts}}
                {{#unless @first}}
                    {{> "loop"}}
                {{/unless}}
            {{/foreach}}
        </div>

        {{pagination}}
    {{else}}
        <div class="gh-canvas">
            <p>Es wurden noch keine Artikel mit diesem Tag veröffentlicht.</p>
        </div>
    {{/if}}
</main>